package components

var assetsHandle = templ.NewOnceHandle()

templ IndexView(meta PageMetadata, render templ.Component) {
		<html lang="en">
				@headTemplate(meta)

				<body>
						<!-- header -->
						@headerTemplate()

						<!-- main -->
						@mainTemplate(render)

						<!-- footer -->
						@footerTemplate()
				</body>
		</html>
}

type PageMetadata struct {
		Title       string
		Description string
		Canonical   string
		Image       string
		URL         string
}


templ headTemplate(meta PageMetadata) {
		<head>
				<meta charset="UTF-8" />
				<meta name="viewport" content="width=device-width, initial-scale=1.0" />
				<title>[DYNAMIC + default]</title>

				<!-- Meta description -->
				<meta name="description" content="[DYNAMIC + default]" />

				<!-- Canonical URL -->
				<link rel="stylesheet" href="/public/styles.css"/>
				<link rel="canonical" href="[DYNAMIC + default]" />

				<!-- Open Graph metadata -->
				<meta property="og:title" content="[DYNAMIC + default]" />
				<meta property="og:description" content="[DYNAMIC + default]" />
				<meta property="og:image" content="[DYNAMIC + default]" />
				<meta property="og:url" content="[DYNAMIC + default]" />
				<meta property="og:type" content="website" />

				<!-- Twitter Card metadata -->
				<meta name="twitter:card" content="summary_large_image" />
				<meta name="twitter:title" content="[DYNAMIC + default]" />
				<meta name="twitter:description" content="[DYNAMIC + default]" />
				<meta name="twitter:image" content="[DYNAMIC + default]" />

				<!-- Favicon -->
				<link rel="icon" href="/favicon.ico" type="image/x-icon" />

				<!-- Robots meta tag -->
				<meta name="robots" content="index, follow" />
		</head>
}

templ headerTemplate() {
		<body class="min-h-screen flex flex-col">
				<!-- Main Header -->
				<header class="w-full bg-gray-50 border-b border-gray-400">
						<nav aria-label="Main navigation" class="container flex justify-between py-4">
								<ul class="flex gap-6 text-gray-800">
										<li class="mr-16">
												<a href="/">
														@logosvg()
												</a>
										</li>
										<li class=""><a href="">About</a></li>
										<li class=""><a href="">Docs</a></li>
										<li class=""><a href="">Faucet Hub</a></li>
										<li class=""><a href="">Playground</a></li>
								</ul>
								<ul class="flex gap-6">
										<li><a href="">Github</a></li>
										<li><button>Theme</button></li>
								</ul>
						</nav>
				</header>
		</body>
}

type MainContent struct {
		Content     string
}

templ mainTemplate(render templ.Component) {
		<main class="w-full grow-[2]">
				<!-- Realm Navigation -->
				<header class="sticky top-0 bg-gray-50 py-3 border-b border-gray-400">
						<nav aria-label="Realm navigation" class="container flex justify-between w-full font-semibold">
								<ol class="flex text-gray-800">
										<li class="before:content-['/']"><a class="hover:underline" href="">r/gnoland</a></li>
										<li class="before:content-['/']"><a class="hover:underline" href="">blog</a></li>
								</ol>
								<ul class="flex gap-6 text-gray-300">
										<li><a class="hover:text-gray-600" href="">Help</a></li>
										<li><a class="hover:text-gray-600" href="">Source</a></li>
								</ul>
						</nav>
				</header>

				<section class="container mb-24 grid grid-cols-4 grid-flow-dense gap-20 items-start">
						<aside class="toc top-20 sticky mt-9" aria-label="Table of Contents">
								<span class="text-gray-300 font-semibold">Content</span>
								<nav class="text-100">
										<ul class="list-disc pl-4 space-y-2 pt-2">
												<li>
														<a class="line-clamp-2 hover:text-green-600" href="#title-1">
																Weâ€™re building Gno.land, the first open-source smart contract system, using Gno, an interpreted and fully deterministic variation of the Go programming language for succinct and
																composable smart contracts.
														</a>
														<ul class="list-disc pl-4 space-y-2 pt-2">
																<li><a class="line-clamp-2 hover:text-green-600" href="">Upcoming Events</a></li>
																<li><a class="line-clamp-2 hover:text-green-600" href="">Latest Contribution</a></li>
																<li><a class="line-clamp-2 hover:text-green-600" href="">Gno Playground</a></li>
																<li><a class="line-clamp-2 hover:text-green-600" href="">About gno.land</a></li>
																<li><a class="line-clamp-2 hover:text-green-600" href="">Learn about gno.land</a></li>
																<li><a class="line-clamp-2 hover:text-green-600" href="">Built with gno.land</a></li>
																<li><a class="line-clamp-2 hover:text-green-600" href="">Explore the universe</a></li>
																<li><a class="line-clamp-2 hover:text-green-600" href="">Last blogposts</a></li>
														</ul>
												</li>
										</ul>
								</nav>
						</aside>
						<article class="realm-content">
								<!-- Realm Content -->
								if render != nil {
										@RealmView(render)
								}
						</article>

				</section>
		</main>
}


templ footerTemplate() {
		<footer class="w-full text-100 py-1.5 border-t border-gray-300">
				<nav class="container grid grid-cols-4 justify-between items-center gap-20">
						<!-- Footer Navigation -->
						<div class="col-span-1">
								<a class="block h-4" href="/">
										@logosvg()
								</a>
						</div>
						<div class="flex justify-between col-span-3">
								<ul aria-label="Footer navigation" class="flex gap-6">
										<li><a href="">About</a></li>
										<li><a href="">Docs</a></li>
										<li><a href="">Faucet</a></li>
										<li><a href="">Blog</a></li>
