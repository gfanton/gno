								<ul aria-label="Social media" class="flex gap-6">
										<li><a href="">Github</a></li>
										<li><a href="">X</a></li>
										<li><a href="">Discord</a></li>
										<li><a href="">YouTube</a></li>
								</ul>
								<ul aria-label="Legal" class="flex gap-6">
										<li><a href="">Terms</a></li>
										<li><a href="">Privacy</a></li>
								</ul>
						</div>
				</nav>
		</footer>
}

